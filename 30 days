<input type="radio" name="options" value="last30days" (change)="onRadioChange('last30days')"> Last 30 Days
selectedOption: string;
  pastThirtyDays: Date[] = [];

  onRadioChange(option: string): void {
    this.selectedOption = option;

    if (option === 'last30days') {
      this.calculatePastThirtyDays();
    }
  }

  calculatePastThirtyDays(): void {
    const today = new Date(); // Current date

    for (let i = 0; i < 30; i++) {
      const pastDate = new Date(today);
      pastDate.setDate(today.getDate() - i);
      this.pastThirtyDays.push(pastDate);
    }

    this.pastThirtyDays.reverse(); // Reverse the array to get the past dates in ascending order
  }
