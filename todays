it('should CurrencySymbol be selected when getCurrencySymbolList()', () => {
    component.getCurrencySymbolList();
    tick();  
    expect(component.currencySymbolList).toEqual([{ symbol: '$', name: 'US Dollar' }]);

  });

  it('should handle error when fetching getCurrencySymbolList()', fakeAsync(() => {
    spyOn(ubmService, 'getCurrencySymbolList').and.returnValue(of({}).pipe(() => { throw new Error('Error occurred'); }));

    component.getCurrencySymbolList();
    tick();  
    expect(console.log).toHaveBeenCalledWith('Error occurred');
  }));

it('should set currencyData when getCurrencySymbol() is called ', () => {
   
    component.facilityList = [
      { Id: '1', ReportingCurrency: 'USD' },
      { Id: '2', ReportingCurrency: 'EUR' },
    ];
 
    component.invoiceInformation = {
      locationId: '1',  
  };
     component.currencySymbolList = [
      { Code: 'USD', Name: 'US Dollar' },
      { Code: 'EUR', Name: 'Euro' },
    ];
     spyOn(component, 'getCurrencySymbol');
     component.getCurrencyData();
     expect(component.selectedLocationValue).toEqual({ Id: '1', ReportingCurrency: 'USD' });
    expect(component.currencyData).toEqual({ Code: 'USD', Name: 'US Dollar' });
     expect(component.getCurrencySymbol).toHaveBeenCalled();
  });
