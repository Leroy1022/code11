 <div>
        <label>
          <input type="radio" name="dateRange" value="all" [(ngModel)]="selectedDateRange" (ngModelChange)="updateDateRange()">
          All Dates
        </label>
        <label>
          <input type="radio" name="dateRange" value="last7" [(ngModel)]="selectedDateRange" (ngModelChange)="updateDateRange()">
          Last 7 Days
        </label>
      </div>
  
      <div *ngIf="selectedDateRange === 'last7'">
        <ul>
          <li *ngFor="let date of pastSevenDays">{{ date | date }}</li>
        </ul>
      </div>
      selectedDateRange: string = 'all';
  pastSevenDays: Date[] = [];

  updateDateRange(): void {
    if (this.selectedDateRange === 'last7') {
      this.calculatePastSevenDays();
    } else {
      // Reset the array if "All Dates" is selected
      this.pastSevenDays = [];
    }
  }calculatePastSevenDays(): void {
    const today = new Date(); // Current date

    this.pastSevenDays = [];

    for (let i = 0; i < 7; i++) {
      const pastDate = new Date(today);
      pastDate.setDate(today.getDate() - i);
      this.pastSevenDays.push(pastDate);
    }

    this.pastSevenDays.reverse(); // Reverse the array to get the past dates in ascending order
  }
